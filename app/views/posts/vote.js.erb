if (<%= @vote.value%> == 1) {
	$("#<%= @vote.post.id %> .vote .voting-option .haha").addClass("inactive");
	$("#<%= @vote.post.id %> .vote .voting-option .meh").removeClass("inactive");
	//$("#<%= @vote.post.id %> .vote .voting-option .haha").attr('href', "#");
	//$("#<%= @vote.post.id %> .vote .voting-option .meh").attr('href', <%=vote_post_path(@vote.post, value: -1) %>);
} else if (<%= @vote.value%> == -1) {
	$("#<%= @vote.post.id %> .vote .voting-option .meh").addClass("inactive");
	$("#<%= @vote.post.id %> .vote .voting-option .haha").removeClass("inactive");
	//$("#<%= @vote.post.id %> .vote .voting-option .meh").attr('href', "#");
	// $("#<%= @vote.post.id %> .vote .voting-option .meh").attr('href', <%=vote_post_path(@vote.post, value:-1) %>);
}
$("#<%= @vote.post.id %> .vote .vote-count").html("<%= pluralize @vote.post.votes, 'vote' %>");
