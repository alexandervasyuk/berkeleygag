<article id="<%= feed_item.id %>" class="feed_item">
	<div class="title">
	<%= feed_item.title %>
	</div>
	<span style="float:right; position:relative; top:-20px;">	
	<%if current_user?(feed_item.user)%>
		<%= link_to "delete", feed_item, method: :delete,
				data: { confirm: "You sure?" },
				title: feed_item.title %>
	<%end%>
	</span>
	<div class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </div>
	<div class="photo">
		<% if feed_item.photo? %>
			<%= image_tag feed_item.photo_url, class:"img-responsive"%>
		<% end %>
	</div>
	<div class="vote">
		<span class="vote-count">
			<%= pluralize feed_item.votes, "vote" %>
		</span>
		<% if current_user && !feed_item.owned_by?(current_user)%>
			<% if already_voted?(current_user, feed_item)%>
			<span class="voting-option inactive">
				<%= link_to "haha", "#", class:"haha"%>
				<span> | </span>
				<%= link_to "meh", "#", class:"meh"%>
			</span>
			<% else %>
				<span class="voting-option">
					<%= link_to "haha", vote_post_path(feed_item, value:1), method: :post, remote: true, class:"haha"%>
					<span class="vertical-divider"> | </span>
					<%= link_to "meh", vote_post_path(feed_item, value:-1), method: :post, remote: true, class:"meh"%>
				</span>
			<% end %>
		<% end %>	
	</div>
</article>