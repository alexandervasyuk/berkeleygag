<%= form_for @post do |f|%>
	
	<%= f.label :title, class:"post-title"%>
	<%= f.text_field :title, class:"span3"%>

	<%= f.file_field :photo, class:"photo"%>

	<%= f.label :remote_photo_url, "or URL:"%>
	<%= f.text_field :remote_photo_url, class:"span3"%>

	<%= f.submit "Post", class: "btn btn-primary", style:"display:block" %>
<%end%>