<div class="row">
 	<div class="span4 pull-right">
 		<h1>Sign in</h1>
		<%= form_for @login, {url:sessions_path} do |f|%>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :email%>
			<%= f.text_field :email, placeholder:"Email", class:"span4"%>

			<%= f.label :password%>
			<%= f.password_field :password, placeholder:"Password", class:"span4"%>

			<%= f.submit "Sign in", class: "btn btn-primary", style:"display:block"%>
		<%end%>
	</div>
</div>