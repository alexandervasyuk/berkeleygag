<div class="row">
 	<div class="col-md-4 pull-right">
 		<h1>Sign in</h1>
		<%= form_for @login, url:sessions_path, html:{role:"form"} do |f|%>
			<%= render 'shared/error_messages', object: f.object %>

			<div class="form-group">
				<%= f.label :email%>
				<%= f.text_field :email, placeholder:"Email", class:"col-md-4 form-control"%>
			</div>

			<div class="form-group">
				<%= f.label :password%>
				<%= f.password_field :password, placeholder:"Password", class:"col-md-4 form-control"%>
			</div>
			<%= f.submit "Sign in", class: "btn btn-primary", style:"margin-top:10px"%>
		<%end%>
	</div>
</div>