<div class="row">
 	<div class="col-md-4 pull-right">
 		<h1>Edit</h1>
		<%= form_for @user do |f|%>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :email%>
			<%= f.text_field :email, placeholder:"Email", class:"col-md-4"%>

			<%= f.label :password%>
			<%= f.password_field :password, placeholder:"Password", class:"col-md-4"%>

			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, placeholder:"Type password again bro", class:"col-md-4"%>

			<%= f.submit "Update", class: "btn btn-primary", style:"display:block"%>
		<%end%>
	</div>
</div>