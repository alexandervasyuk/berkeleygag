<div class="row">
 	<div class="col-md-4 pull-right">
 		<h1>Sign up</h1>
 		<div style="font-size: 0.8em; color: #999;">You will receive a confirmation email to this address. Just in case, check your spam folder too. Once confirmed you will be able to post. </div>
		<%= form_for @user, html:{role:"form"} do |f|%>
			<%= render 'shared/error_messages', object: f.object %>

			<div class="form-group">
			<%= f.label :email%>
			<%= f.text_field :email, placeholder:"Email", class:"col-md-4 form-control"%>
			</div>

			<div class="form-group">
			<%= f.label :password%>
			<%= f.password_field :password, placeholder:"Password", class:"col-md-4 form-control"%>
			</div>

			<div class="form-group">
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, placeholder:"Type password again bro", class:"col-md-4 form-control"%>
			</div>

			<%= f.submit "Sign up", class: "btn btn-primary", style:"margin-top:10px"%>
		<%end%>
	</div>
</div>