<div class="row">
  <aside class="span4">
    <div>
      <%= @user.email%>
    </div>
    <div>
      <%= "Reputation: #{@user.total_votes}"%>
    </div>
    <div>
      <%= link_to "Edit my account", edit_user_path(@user)%>  
    </div>
  </aside>
  <div class="span8">
    <% if @user.posts.any? %>
      <h4>Your posts (<%= @user.posts.count %>)</h4>
      <section class="posts">
        <%= render @posts %>
      </section>
    <% end %>
  </div>
</div>